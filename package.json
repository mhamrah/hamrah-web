{
  "name": "hamrah-app",
  "description": "Your agent buddy",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "engines-annotation": "Mostly required by sharp which needs a Node-API v9 compatible runtime",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/cloudflare-pages/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "preview": "pnpm run build && wrangler dev",
    "serve": "wrangler pages dev ./dist --compatibility-flags=nodejs_als",
    "start": "vite --open --mode ssr",
    "cf-typegen": "wrangler types",
    "prepare": "pnpm dlx husky install",
    "qwik": "qwik",
    "db:generate": "pnpm dlx drizzle-kit generate --config=drizzle.config.ts",
    "db:push": "pnpm dlx drizzle-kit push --config=drizzle.config.ts",
    "db:migrate": "pnpm wrangler d1 migrations apply prod-hamrah-app-auth",
    "db:migrate:remote": "pnpm wrangler d1 migrations apply prod-hamrah-app-auth --remote",
    "db:status": "pnpm wrangler d1 migrations list prod-hamrah-app-auth",
    "db:status:remote": "pnpm wrangler d1 migrations list prod-hamrah-app-auth --remote",
    "db:studio": "pnpm dlx drizzle-kit studio --config=drizzle.config.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "./scripts/run-all-tests.sh",
    "test:ci": "pnpm lint && pnpm build.types && pnpm test:run && pnpm build",
    "pretest:e2e": "pnpm exec playwright install --with-deps"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.16.0",
    "@builder.io/qwik-city": "^1.16.0",
    "@cloudflare/workers-types": "^4.20250831.0",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@qwik-ui/headless": "0.7.0",
    "@qwik-ui/styled": "0.3.4",
    "@qwik-ui/utils": "0.3.2",
    "@qwikest/icons": "^0.0.13",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "24.3.0",
    "@typescript-eslint/eslint-plugin": "8.41.0",
    "@typescript-eslint/parser": "8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "class-variance-authority": "^0.7.1",
    "drizzle-kit": "0.31.4",
    "eslint": "9.34.0",
    "eslint-plugin-qwik": "^1.16.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "nx": "21.4.1",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "qwik-ui": "0.3.1",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.9.2",
    "typescript-eslint": "8.41.0",
    "undici": "^7.15.0",
    "vite": "^7.1.4",
    "vite-plugin-mkcert": "1.17.8",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.33.1"
  },
  "nx": {},
  "dependencies": {
    "@oslojs/crypto": "1.0.1",
    "@oslojs/encoding": "1.1.0",
    "arctic": "3.7.0",
    "drizzle-orm": "0.44.5",
    "jose": "6.1.0"
  }
}
