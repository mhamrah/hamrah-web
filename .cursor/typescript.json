{
  "rules": {
    "strict-types": {
      "pattern": ": any",
      "message": "Avoid using 'any' type, specify concrete types"
    },
    "null-checks": {
      "pattern": "[!\\?]\\.",
      "message": "Use proper null checking with optional chaining"
    },
    "type-imports": {
      "pattern": "import type",
      "message": "Use 'import type' for type-only imports"
    },
    "enum-naming": {
      "pattern": "enum [A-Z][a-zA-Z0-9]*",
      "message": "Enums should use PascalCase"
    },
    "interface-naming": {
      "pattern": "interface [I]?[A-Z][a-zA-Z0-9]*",
      "message": "Interfaces should use PascalCase"
    },
    "type-assertions": {
      "pattern": "as [A-Z][a-zA-Z0-9]*",
      "message": "Use type assertions sparingly, prefer type guards"
    }
  }
} 